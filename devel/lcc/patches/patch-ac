+/* parse -W[alp] argument, splitting at commas, a la gcc */
+static List wappend (char *warg, List lst) {
+	if (*warg != ',') return append (warg, lst);
+	warg++;
+	do {
+		char *s = warg;
+		for (; *warg && *warg != ','; warg++)
+			;
+		if (*warg) *warg++= '\0';
+		if (*s) lst = append (s, lst);
+	} while (*warg);
+	return lst;
+}
+

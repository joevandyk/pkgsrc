psmsg='#
# This file was auto-generated by pkgsrc.'

case ${STAGE} in

POST-INSTALL)

	cd ${PKG_SYSCONFDIR}/axfrdns
	if ! [ -s tcp ]; then
		${ECHO} ':allow,AXFR=""' > tcp
		${ECHO} "$psmsg" >> tcp
		${CHMOD} 644 tcp
	fi
	${LOCALBASE}/bin/tcprules tcp.cdb tcp.tmp < tcp
	${CHMOD} 644 tcp.cdb

	cd ${PKG_SYSCONFDIR}/dnscache
	${TOUCH} ip/127.0.0.1
	${CHMOD} 644 ip/127.0.0.1
	if ! [ -s servers/@ ]; then
		${CP} ../dnsroots.global servers/@
	fi

	;;

esac

+#if !HAVE_MBRTOWC
+static size_t mbrtowc(wchar_t *pw, const char *s, size_t n, mbstate_t *ps)
+{
+	if (s == NULL) return 0;
+	if (n == 0) return (size_t)-1;
+	if (pw) *pw = (wchar_t) *s;
+	return (*s != '\0');
+}

 #include <errno.h>
+#include <string.h>
 #define NULL 0
 
 
 char *
 uerror() {
+#ifdef HAS_STRERROR
+	return strerror(errno);
+#else
 	extern int sys_nerr;
 	extern char *sys_errlist[];
 	if (errno > sys_nerr)
 	    return NULL;
 	else
 	    return sys_errlist[errno];
+#endif
 }

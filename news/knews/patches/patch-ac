+static void fix_mail_name(void)
+{
+    char	*dn;
+
+    if (!global.mail_name) return;
+
+    dn = strchr(global.mail_name, '@');
+    if (!dn) return;
+    *dn++='\0';
+
+    XtFree(global.domain_name);
+    global.domain_name = XtNewString(dn);
+}
+
 void fix_domain_stuff()
 {
     fix_domain_name();
     fix_user_id();
+    fix_mail_name();
 

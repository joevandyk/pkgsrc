+static INLINE2 void i_das(void)
+{
+    /* Opcode 0x2f */
+    if (AF || ((*bregs[AL] & 0xf) > 9))
+    {
+        *bregs[AL] -= 6;
+        AF = 1;
+    }
+    else
+        AF = 0;
+
+    if (CF || (*bregs[AL] > 0x9f))
+    {
+        *bregs[AL] -= 0x60;
+        CF = 1;
+    }
+    else
+        CF = 0;
+
+    SetPF(*bregs[AL]);
+    SetSFB(*bregs[AL]);
+    SetZFB(*bregs[AL]);
+}

+/*   AotCB - Change the always on top mode */
+static void AotCB( Widget w, XtPointer cl, XtPointer cb )
+{
+    TV_PREFS        *p = &G_glob.prefs;
+
+    p->aot_mode = !p->aot_mode;
+    XUTILSetAlwaysOnTop( p->aot_mode );
+    TVMENUSetSelectedAotMode( p->aot_mode );
+}

+OPSYS!=	uname -s
+# On NetBSD -nostdlib will exclude the ELF note that tags binaries as native.
+.if (${OPSYS} == NetBSD)
+COMPILEFLAGS=-D_main=main -DWINDOWS
+.else
+COMPILEFLAGS=-nostdlib
+.endif
+
 all : burnP5 burnP6 burnK6 burnK7 burnBX burnMMX
+
 .S:
-	gcc -s -nostdlib -o $@ $<
+	gcc -s ${COMPILEFLAGS} -o $@ $<
